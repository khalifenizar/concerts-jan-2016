<h1>Add a New Concert</h1>

<%= @concert.errors.full_messages %>

<%= form_for @concert do |f| %>
  <div>
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </div>

  <div>
    <%= f.label :venue %>
    <%= f.text_field :venue %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :start_date %>
    <%= f.datetime_field :start_date %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <button type="submit">
    Add this concert
  </button>
<% end %>
